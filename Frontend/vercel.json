{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "http://localhost:3000"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}